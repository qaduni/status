# Website Status Monitor Environment Configuration
# Copy this file to .env and update the values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/monitoring_db

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://your-domain.com

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Settings (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Monitoring Settings
MONITORING_INTERVAL=60  # seconds
MONITORING_TIMEOUT=30   # seconds
ALERT_COOLDOWN=300     # seconds

# Docker PostgreSQL (for development)
POSTGRES_DB=monitoring_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123